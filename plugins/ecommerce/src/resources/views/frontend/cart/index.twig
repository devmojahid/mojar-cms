$(document).ready(function() {
    // Handle quantity changes
    $('.quantity-input').on('change', function() {
        let $input = $(this);
        let postId = $input.data('id');
        let type = $input.data('type') || 'product';
        let quantity = $input.val();
        let $row = $input.closest('tr');

        $.ajax({
            url: '{{ url('ajax/cart/update') }}',
            type: 'POST',
            data: {
                post_id: postId,
                type: type,
                quantity: quantity,
                content: 'cart',
                _token: '{{ csrf_token() }}'
            },
            success: function(response) {
                if (response.success) {
                    // Get the item from nested structure
                    let itemKey = `${type}_${postId}`;
                    let updatedItem = response.cart.data.items[itemKey];

                    if (updatedItem) {
                        // Update line price for this item
                        $row.find('.product-price').text(updatedItem.pricing.line_price_formatted);
                    }

                    // Update cart totals
                    $('.subtotal-price').html(response.cart.data.pricing.subtotal_formatted);

                    if (response.cart.data.pricing.discount > 0) {
                        $('.discount-row').show();
                        $('.discount-amount').html('-' + response.cart.data.pricing.discount_formatted);
                    } else {
                        $('.discount-row').hide();
                    }

                    // Update final total
                    $('.total-price').html(response.cart.data.pricing.total_formatted);

                    showCartToast('success', response.message);
                } else {
                    showCartToast('error', response.message || '{{ trans("ecomm::content.error_updating_cart") }}');
                    // Reset quantity on error
                    $input.val($input.data('original-value'));
                }
            },
            error: function(xhr) {
                showCartToast('error', '{{ trans("ecomm::content.server_error") }}');
                // Reset quantity on error
                $input.val($input.data('original-value'));
            }
        });
    });

    // Store original values when focusing input
    $('.quantity-input').on('focus', function() {
        $(this).data('original-value', $(this).val());
    });

    // Increment/decrement buttons
    $('.quantity-decrease').click(function() {
        let $input = $(this).closest('.input-group').find('.quantity-input');
        let value = parseInt($input.val(), 10);
        if (value > 1) {
            $input.val(value - 1).trigger('change');
        }
    });

    $('.quantity-increase').click(function() {
        let $input = $(this).closest('.input-group').find('.quantity-input');
        let value = parseInt($input.val(), 10);
        $input.val(value + 1).trigger('change');
    });

    // Handle remove item
    $('.remove-item').click(function() {
        let $row = $(this).closest('tr');
        let postId = $(this).data('id');
        let type = $(this).data('type') || 'product';

        $.ajax({
            url: '{{ url('ajax/cart/remove-item') }}',
            type: 'POST',
            data: {
                post_id: postId,
                type: type,
                _token: '{{ csrf_token() }}'
            },
            success: function(response) {
                console.log('Remove response:', response); // For debugging
                if (response.success) {
                    // First remove the row
                    $row.fadeOut(300, function() {
                        $(this).remove();
                    });

                    // Then update totals
                    if (response.cart && response.cart.data) {
                        let pricing = response.cart.data.pricing;

                        // Update subtotal
                        $('.subtotal-price').html(pricing.subtotal_formatted);

                        // Handle discount
                        if (pricing.discount > 0) {
                            $('.discount-row').show();
                            $('.discount-amount').html('-' + pricing.discount_formatted);
                        } else {
                            $('.discount-row').hide();
                        }

                        // Update final total
                        $('.total-price').html(pricing.total_formatted);

                        // Handle empty cart
                        if (response.cart.data.total_items === 0) {
                            $('.card-body').html(`
                                <div class="text-center py-5">
                                    <i class="fa fa-shopping-cart fa-3x text-muted mb-3"></i>
                                    <h4>{{ trans('ecomm::content.cart_empty') }}</h4>
                                    <a href="/" class="btn btn-primary mt-3">
                                        {{ trans('ecomm::content.continue_shopping') }}
                                    </a>
                                </div>
                            `);
                        }
                    }

                    showCartToast('success', response.message);
                } else {
                    showCartToast('error', response.message || '{{ trans("ecomm::content.error_removing_item") }}');
                }
            },
            error: function(xhr) {
                console.error('Remove error:', xhr); // For debugging
                showCartToast('error', '{{ trans("ecomm::content.server_error") }}');
            }
        });
    });
});
</script>
