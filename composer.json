{
    "name": "mojar/cms",
    "type": "project",
    "description": "Mojar CMS is a Content Management System (CMS) developed based on Laravel Framework and web platform whose sole purpose is to make your development workflow simple again. Project develop by Mojar",
    "keywords": [
        "framework",
        "laravel",
        "laravel cms",
        "mymo cms",
        "laravel cms like wordpress",
        "cms like wordpress",
        "mojar",
        "juzacms"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "ext-curl": "*",
        "ext-fileinfo": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "ext-simplexml": "*",
        "ext-zip": "*",
        "composer/installers": "^2.2",
        "guzzlehttp/guzzle": "^7.8",
        "inertiajs/inertia-laravel": "^2.0",
        "intervention/imagecache": "^2.5",
        "juzaweb/packages": "^1.2",
        "laravel/breeze": "^1.14",
        "laravel/framework": "^11.9",
        "laravel/tinker": "^2.9",
        "oomphinc/composer-installers-extender": "^2.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.6",
        "barryvdh/laravel-ide-helper": "^2.1",
        "fakerphp/faker": "^1.23",
        "laravel/sail": "^1.26",
        "laravel/telescope": "^4.7",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.1",
        "phpunit/phpunit": "^10.5",
        "spatie/laravel-ignition": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "Juzaweb\\": "modules/"
        },
        "files": [
            "modules/CMS/Helpers/helpers.php"
        ]
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan juzacms:plugin-autoload"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan juzacms:plugin-autoload"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php artisan juzacms:plugin-autoload"
        ],
        "phpcs": "phpcs --standard=.phpcs.xml",
        "php-cs-fixer": "php-cs-fixer --config=./.php-cs-fixer.dist.php"
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        },
        "installer-types": [
            "mojar-plugin",
            "mojar-theme"
        ],
        "installer-paths": {
            "plugins/{$name}/": [
                "type:mojar-plugin"
            ],
            "themes/{$name}/": [
                "type:mojar-theme"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "composer/installers": true,
            "oomphinc/composer-installers-extender": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}