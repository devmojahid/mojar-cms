    ===============================-->


    <!--==============================
        MENU START
    ===============================-->
    <nav class="navbar navbar-expand-lg tf__main_menu">
        <div class="container">
            <a class="navbar-brand" href="{{ home_url() }}">
                <img src="{{ get_logo() }}" alt="EduFax" class="img-fluid w-100" style="max-width: 100px; max-height: 80px;">
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <i class="far fa-bars menu_bar_icon"></i>
                <i class="far fa-times menu_close_icon"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                    {{  jw_nav_menu({
                        'container_before': '<ul class="navbar-nav ms-auto">',
                        'container_after': '</ul>',
                        'theme_location': 'primary',
                        'item_view': 'theme::components.menu_item'
                    }) }}

                <ul class="tf__right_menu d-flex flex-wrap">
                    <li><a class="menu_search_icon"><i class="far fa-search"></i></a></li>
                    {% if auth %}
                    <li><a class="signin" href="{{ url('profile/dashboard') }}">{{ __('Dashboard') }}</a></li>
                    {% else %}
                    <li><a class="signin" href="{{ url('login') }}">{{ __('sign up') }}</a></li>
                    {% endif %}
                {% if auth %}
                <form action="{{ url('logout') }}"
                    method="post"
                        class="form-logout"
                    >
                        {{ csrf_field() }}
                        <li><button class="signin" type="submit">{{ __('Logout') }}</button></li>
                    </form>
                {% endif %}
                </ul>
            </div>
        </div>
    </nav>
    <div class="menu_search">
        <form action="{{ url('search') }}">
            <input type="search" name="q" placeholder="{{ __('Search here...') }}" />
            <button class="tf__common_btn" type="submit search-btn"><i class="far fa-search"></i> Search</button>
            <span class="close_search"><i class="far fa-times"></i></span>
        </form>

    </div>
    <!--==============================
        MENU END
    ===============================-->
