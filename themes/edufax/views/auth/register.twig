{% extends 'cms::layouts.frontend' %}

{% block content %}
    {% include 'theme::components.breadcrumb' with {
        title: 'Sign Up',
        background_image: 'images/breadcrumb_bg.jpg',
        items: [
            {'label': 'Home', 'url': '/'},
            {'label': 'Sign Up'}
        ]
    } %}
    <section class="tf__sign_in_page pt_120 xs_pt_80 pb_120 xs_pb_80">
        <div class="container">
            <div class="row">
                <div class="col-xl-5 col-md-9 col-lg-7 m-auto wow fadeInUp" data-wow-duration="1s">
                    <div class="tf__sing_in_form">
                        {% if errors.any %}
                            <div class="alert alert-danger">
                                <ul class="list-unstyled">
                                    {% for error in errors.all %}
                                        <li>
                                            <div class="alert-title">
                                                <i class="fas fa-exclamation-circle me-2"></i>
                                                {{ error }}
                                            </div>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}
                        <form action="" method="post">
                            {{ csrf_field() }}
                            <h4>{{ __('Sign up') }}</h4>
                            <p>{{ __('Welcome back! Please enter your details.') }}</p>
                            <div class="row">
                                <div class="col-xl-12">
                                    <div class="tf__form_single_input">
                                        <label>{{ __('Full name') }}*</label>
                                        <input type="text" placeholder="{{ __('Full name') }}" name="name" value="{{ old('name') }}">
                                    </div>
                                </div>
                                <div class="col-xl-12">
                                    <div class="tf__form_single_input">
                                        <label>{{ __('Email') }}*</label>
                                        <input type="email" placeholder="{{ __('Email') }}" name="email" value="{{ old('email') }}">
                                    </div>
                                </div>
                                <div class="col-xl-12">
                                    <div class="tf__form_single_input">
                                        <label>{{ __('Password') }}*</label>
                                        <input type="password" placeholder="{{ __('Password') }}" name="password">
                                    </div>
                                </div>
                                <div class="col-xl-12">
                                    <div class="tf__form_single_input">
                                        <label>{{ __('Repeat password') }}*</label>
                                        <input type="password" placeholder="{{ __('Repeat password') }}" name="password_confirmation">
                                    </div>
                                </div>
                                <div class="col-xl-12">
                                    <div class="tf__form_single_input">
                                        <button type="submit" class="tf__common_btn">{{ __('Sign up') }}</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <p class="create_account">{{ __('Already have an account ?') }} <a href="{{ url('login') }}">{{ __('Sign in') }}</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
