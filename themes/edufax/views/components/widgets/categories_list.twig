<div class="tf__sidebar_categories">
    <h3>{{ data.title }}</h3>
    {% set items = get_custom_menus(data.custom_menu) %}
    {% if items is not empty %}
    {% set menu_items = get_menu_items_by_menu(items[0].id) %}
    {% endif %}
    <ul>
        {% for item in menu_items %}
        <li><a href="{{ item.link }}">{{ item.label }} <span>{{ item.count }}</span></a></li>
        {% endfor %}

    </ul>

</div>

