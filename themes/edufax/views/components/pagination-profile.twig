{% if data.meta.last_page > 1 %}
<div class="tf__pagination">
    <div class="row">
        <div class="col-12">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    {% for page in data.meta.links %}
                        {% if page.url %}
                            <li class="page-item">
                                <a class="page-link {% if page.active %}active{% endif %}" href="{{ page.url }}">
                                    {{ page.label }}
                                </a>
                            </li>
                        {% else %}
                            {% if page.label != '&laquo;' and page.label != '&raquo;' %}
                                <li class="page-item">
                                    <span class="page-link">{{ page.label }}</span>
                                </li>
                            {% endif %}
                        {% endif %}
                    {% endfor %}
                </ul>
            </nav>
        </div>
    </div>
</div>
{% endif %}