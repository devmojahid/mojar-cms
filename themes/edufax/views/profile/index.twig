{% extends 'cms::layouts.frontend' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>{{ title|default('Profile') }}</h1>
                <div class="content">
                    {% if pages is defined and pages is not empty %}
                        {% for key, page in pages %}
                            {% if page is not null and page.title is defined %}
                                <h3>{{ page.title }}</h3>
                                {% if page.contents is defined %}
                                    {% include page.contents|default('theme::profile.default') with {
                                        data: page.data|default([]),
                                    } %}
                                {% endif %}
                            {% endif %}
                        {% endfor %}
                    {% else %}
                        <p>No profile sections available.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
