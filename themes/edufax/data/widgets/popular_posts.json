{
    "name": "Popular Posts",
    "description": "Display popular blog posts in sidebar",
    "form": [
        {
            "type": "text",
            "name": "title",
            "label": "Widget Title",
            "data": {
                "value": "Popular Posts"
            }
        },
        {
            "type": "select",
            "name": "post_type",
            "label": "Post Type",
            "data": {
                "options": {
                    "posts": "Blog Posts",
                    "news": "News"
                },
                "value": "posts"
            }
        },
        {
            "type": "number",
            "name": "limit",
            "label": "Number of Posts to Show",
            "data": {
                "min": 1,
                "max": 10,
                "value": 4,
                "description": "How many posts to display in the widget"
            }
        },
        {
            "type": "select",
            "name": "sort_by",
            "label": "Sort Posts By",
            "data": {
                "options": {
                    "views": "Most Viewed",
                    "created_at": "Latest Posts",
                    "comments_count": "Most Commented"
                },
                "value": "views"
            }
        },
        {
            "type": "taxonomy",
            "name": "category",
            "label": "Filter by Category",
            "data": {
                "post_type": "posts",
                "taxonomy": "categories"
            }
        }
    ]
} 